<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.NoActionBar">
        <!--<item name="android:fitsSystemWindows">true</item>-->
    </style>

    <style name="Widget.CameraView" parent="android:Widget">
        <item name="android:adjustViewBounds">false</item>
        <item name="facing">back</item>
        <item name="aspectRatio">4:3</item>
        <item name="autoFocus">true</item>
        <item name="flash">auto</item>
    </style>

    <style name="MyProgressBar" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:clipOrientation">vertical</item>
        <item name="android:progressDrawable">@drawable/progress_drawable</item>
    </style>



</resources>
